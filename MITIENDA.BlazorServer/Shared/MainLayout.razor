@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <div class="main">
        <div class="top-row px-4">
            <AuthorizeView>
                <Authorized>
                    <span>@context.User.Identity.Name</span>
                    <span>
                        <a href="/account/logout">Salir</a>
                    </span>
                </Authorized>
                <NotAuthorized>
                    <span>
                        <a href="/account/login">Login</a>
                    </span>
                </NotAuthorized>
            </AuthorizeView>
           
        </div>

        <div class="content px-4">
            @Body
        </div>
    </div>
</div>
